<nav class='navbar navbar-expand-lg navbar-light bg-white px-md-2 p-0 main-nav large-nav fixed-top'>
  <div class='container'>
    <a class='navbar-brand m-0 p-0' href='{% path_to home %}'>
      <img src='{{ 'CommImpactLogo_standard.png' | theme_image_url }}'>
    </a>
    <button aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation' class='hamburger hamburger--collapse d-block d-lg-none' data-target='#navbarSupportedContent' data-toggle='collapse' type='button'>
      <span class='hamburger-box'>
        <span class='hamburger-inner'></span>
      </span>
    </button>
    <div class='collapse navbar-collapse' id='navbarSupportedContent'>
      <ul class='navbar-nav ml-auto'>
        {% for page_in_nav in site.pages %}
        {% if page_in_nav.depth == 1 %}
        {% if page_in_nav.listed? == true %}
        {% if page_in_nav.children.size > 0 %}
        <li class='nav-item dropdown'>
          <a class='text-primary dropdown-toggle nav-link pl-4 px-sm-4 {% if page.fullpath == page_in_nav.fullpath or page_in_nav.title == page.parent.title %}active{% endif %}' data-toggle='dropdown' href='{% path_to page_in_nav %}'>
            <span>{{ page_in_nav.title }}</span>
          </a>
          <div class='dropdown-menu p-0 rounded-0 border-0'>
            {% for child in page_in_nav.children %}
            <a class='dropdown-item p-3 text-primary' href='{% path_to child %}'>{{ child.title }}</a>
            {% endfor %}
          </div>
        </li>
        {% else %}
        <li class='nav-item'>
          <a class='text-primary nav-link pl-4 px-sm-4 {% if page.fullpath == page_in_nav.fullpath or page_in_nav.title == page.parent.title %}active{% endif %}' href='{% path_to page_in_nav %}'>
            <span>{{ page_in_nav.title }}</span>
          </a>
        </li>
        {% endif %}
        {% endif %}
        {% endif %}
        {% endfor %}
      </ul>
    </div>
  </div>
</nav>
